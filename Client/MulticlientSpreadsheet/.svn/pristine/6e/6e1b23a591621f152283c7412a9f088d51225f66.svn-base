        /// <summary>
        /// Checking to see if a variable is valid or not
        /// </summary>
        /// <param name="s"></param>
        /// <returns></returns>
        private Boolean isValid(String s)
        {
            return Regex.IsMatch(s, @"^[A-Z][0-9]{1,2}$");
        }

